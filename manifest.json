{
  "manifest_version": 3,
  "name": "Site History Cleaner Pro",
  "version": "1.0",
  "description": "Professional browser history management with backup, restore, and advanced features",
  "permissions": [
    "history",
    "storage",
    "alarms",
    "downloads",
    "identity",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://*.stripe.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
